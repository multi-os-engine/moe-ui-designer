<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTitleSize">0dp</item>
    </style>

    <style name="XOSLabel">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15dp</item>
        <item name="android:text">Label</item>
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="XOSTextView">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <!--=========================================================================================-->

    <!-- XOS Button -->
    <style name="XOSButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:background">#00ffffff</item>
        <item name="android:textColor">#0033ff</item>
        <item name="android:textSize">15dp</item>
        <item name="android:text">Button</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- XOS Bar Button Item and Navigation item-->
    <style name="XOSBarButtonItem" parent="android:Widget.DeviceDefault.Button.Borderless.Small">
        <item name="android:background">#00ffffff</item>
        <item name="android:textColor">#0033ff</item>
        <item name="android:text">Item</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- XOS Text Field (as EditText) -->
    <style name="XOSTextField">
        <item name="android:background">@drawable/xos_text_field_background</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">15dp</item>
    </style>


    <!-- XOS Slider -->
    <style name="XOSSlider">
        <item name="android:progressDrawable">@drawable/xos_progress_view_drawable</item>
        <item name="android:thumb">@drawable/xos_slider_thumb</item>
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- XOS Switch -->
    <style name="XOSSwitch">
        <item name="android:background">@drawable/xos_switch_selector</item>
        <item name="android:button">@android:color/transparent</item>
    </style>


    <!-- XOS Progress View -->
    <style name="XOSProgressView" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:progressDrawable">@drawable/xos_progress_view_drawable</item>
    </style>


    <!-- XOS Activity Indicator -->
    <style name="XOSActivityIndicatorView">
        <item name="android:indeterminateDrawable">@drawable/ios_activity_indicator</item>
    </style>


    <!-- XOS Segmented Control -->
    <style name="XOSSegmentedControl_RadioGroup">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="XOSSegmentedControl_RadioButton">
        <item name="android:background">@drawable/xos_segmented_control_button</item>
        <item name="android:textColor">#0033FF</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>


    <!-- XOS Stepper -->
    <style name="XOSStepper_RadioGroup">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="XOSStepper_RadioButton_Minus">
        <item name="android:background">@drawable/xos_stepper_button_minus</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="XOSStepper_RadioButton_Plus">
        <item name="android:background">@drawable/xos_stepper_button_plus</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- XOS Page Control (as RadioGroup and RadioButton) -->
    <style name="XOSPageControlGroup">
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="XOSPageControlDot">
        <item name="android:background">@drawable/xos_pagecontrol_selector</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:button">@null</item>
    </style>


    <!-- XOS Search Bar -->
    <style name="XOSSearchBar">
        <item name="android:background">@drawable/xos_search_bar_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableBottom">@drawable/ios_icon_search</item>
        <item name="android:orientation">vertical</item>
        <item name="android:textColor">#787878</item>
    </style>


    <!-- XOS Toolbar (as Android Toolbar) -->
    <style name="XOSToolbar">
        <item name="android:background">@drawable/xos_bar_background</item>
    </style>


    <!-- XOS Navigation Bar (as Android Toolbar) -->
    <style name="XOSNavigationBar">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/xos_bar_background</item>
    </style>


    <!-- XOS Tab Bar -->
    <style name="XOSTabBar">
        <item name="android:background">@drawable/xos_bar_background</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>


    <!-- XOS Tab Bar Item -->
    <style name="XOSTabBarItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">#787878</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">8dp</item>
    </style>


    <!-- XOS Text View for Picker View -->
    <style name="XOSPickerView_TextView_Row">
        <item name="android:textSize">30dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">5dp</item>
    </style>


    <!-- XOS Date Piker -->
    <style name="XOSDatePicker">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xos_default_view_background</item>
        <item name="android:text">UIDatePicker</item>
    </style>


    <!-- XOS MapKit View -->
    <style name="XOSMapKitView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xos_default_view_background</item>
        <item name="android:text">UIMapKit</item>
    </style>

    <!-- XOS Web View -->
    <style name="XOSWebView">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xos_default_view_background</item>
        <item name="android:text">UIWebView</item>
    </style>

    <!-- XOS Table View -->
    <style name="XOSTableView">
        <item name="android:background">#D7D7D7</item>
    </style>
    <style name="XOSTableViewCell">
        <item name="android:background">@drawable/xos_table_view_cell_background</item>
    </style>

    <!--=========================================================================================-->


</resources>